<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Punto de Venta En Linea</title>
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/wad01.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

</head>
<body>
    <!-- menu de navegacion -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <img class="img-fluid" alt="" src="~/Imagenes/logo.jpg" width="50" height="50" /> &nbsp;
            <a class="navbar-brand" href="#">Tamayo y Asociados</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Navegacion</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="nav-item active">
                        <a asp-controller="Home" asp-action="Index">Inicio</a>
                    </li>&nbsp;&nbsp;
                    @await Component.InvokeAsync("CategoriasMenu")
                    &nbsp;&nbsp;<li class="nav-item"><a asp-controller="Contactos" asp-action="Index">Contactanos</a></li>
                    @await Component.InvokeAsync("CarroComprasContenido")
                </ul>
            </div>
        </div>
    </nav>
    <!-- Encabezado Jumbotron -->
    <header class="jumbotron my-4">
        <h1 class="display-3">Sitio Ecommerce</h1>
        <p class="lead">Aca puede adquirir nuestros productos y servicios. Tenemos cobertura en la region</p>
        <a href="#" class="btn btn-primary btn-lg">Servicios Adicionales</a>
    </header>

    <div class="container">
        <div class="row text-center">
                @RenderBody()
        </div>
    </div>
    <!-- Pie de Pagina-->
    <footer class="py-5 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; Tamayo y Asociados 2018</p>
        </div>
        <!-- /.container -->
    </footer>

    <!-- Bootstrap core JavaScript -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>

</body>

</body>
</html>
